/* miniprogram/pages/user/index.wxss */
.page-user {
    background: #f9f9f9;
    height    : 100%;
}

.user {
    background     : white;
    display        : flex;
    align-items    : flex-start;
    justify-content: space-between;
    padding        : 10px 15px;
    border-top     : 1px solid #eee;
    border-bottom  : 1px solid #eee;
}

.user .avatar {
    width        : 48px;
    height       : 48px;
    border-radius: 4px;
    margin-right : 10px;
}

.user .info {
    flex     : 1;
    font-size: 16px
}